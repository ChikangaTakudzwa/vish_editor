form(action="/login",method="post")
	#sig_in_fields.form_fields_wrapper
		.form_field_wrapper
			label(for=everyauth.password.loginFormFieldName).form_label Login
			input(type='text', name=everyauth.password.loginFormFieldName)
		.form_field_wrapper
			label.form_label(for=everyauth.password.passwordFormFieldName).form_label Password
			input(name=everyauth.password.passwordFormFieldName, type="password")
	#sig_in_button.form_buttons_wrapper
		input#sign_in_button(type="submit",value="Sign In")
