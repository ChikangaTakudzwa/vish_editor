<%if ((typeof options !== 'undefined')&&(typeof presentation !== 'undefined')){%>
	
	<script type="text/javascript">	
		var options = <%-options%>; 
		var presentation = <%-presentation.content%>;
		
		$(document).ready(function() {
  			var share_url = document.location.href;
  			$("#share_url").html("Share: <a href='" + share_url + "'>" + share_url + "</a>");
		});
	</script>

	<h2> Title <%=presentation.title%> </h2>
	<p> Description <%=presentation.description%> </p>
	<p> Author <%=author%> </p>
	<% if (presentation.avatar) {%>
		<p><img src='<%=presentation.avatar%>'></p>
	<%}%>
	<p id="share_url"> Share </p>

	<p><a href='/presentation/<%=presentation._id%>/edit'>Edit</a></p>

	<form method="post" action="/presentation/<%=presentation._id%>">
	  <input type="hidden" name="_method" value="delete" />
	  <input type="submit" value="Destroy" />    
	</form>

	<p><a href='/presentation/<%=presentation._id%>/download'>Download</a></p>

	<div style='width:900px;height:750px;margin:0 auto; display:block'>
		<iframe src='/vishEditor/viewer.html' style='border:0' width='910' height='750' iframeborder='0' frameborder='0' iframeElement.frameBorder = 0 id="presentation_iframe"/>
	</div>
<%} else {%>
	<%if (flash.warn) {%>
          <p id="warn_alert" class="alert alert-error"><%=flash.warn%></p>
    <%}%>
    <a href="/home"> Home </a>
<%}%>
